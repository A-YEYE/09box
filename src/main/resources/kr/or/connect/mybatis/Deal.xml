<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.connect.mybatis.Deal">
	<resultMap type="Deal" id="dealResult">
		<result property="dealCode" column="DEAL_CODE"/>
		<result property="id" column ="ID"/>
		<result property="dealDate" column ="DEAL_DATE"/>
		<result property="deliveryCharge" column ="DELIVERY_CHARGE"/>
		<result property="totalCost" column ="TOTAL_COST"/>
	</resultMap>
	
	<select id="selectOne" resultType="Deal">
		SELECT goodsName, price, deliveryCharge, tatalCost, name, C.phon, addr2, addr3, addr1
		FROM member A, deal B, goods C
		WHERE A.id = B.id
		AND B.deal_code = C.deal_code;
	</select>
	
	
</mapper>
